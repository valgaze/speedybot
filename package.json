{
    "name": "speedybot",
    "version": "1.0.0",
    "description": "Speedy & easy way to rapidly iterate with conversation bots",
    "bin": {
        "speedybot": "./dist/src/cli/index.js"
    },
    "scripts": {
        "test": "npm run build && node_modules/.bin/tape dist/test/*.test.js",
        "patch": "npx np patch",
        "prepublish": "npm run build",
        "dev": "nodemon",
        "start": "ts-node src/launcher",
        "start:dist": "npm run setup && cd dist && node src/launcher",
        "write:json": "cd dist && node src/cli write:json",
        "build": "tsc",
        "setup": "npm i && tsc"
    },
    "keywords": [
        "bot",
        "scaffold",
        "demo",
        "speedybot"
    ],
    "author": "valgaze@gmail.com",
    "license": "MIT",
    "dependencies": {
        "chalk": "^4.1.2",
        "webex-node-bot-framework": "^2.3.7"
    },
    "files": [
        "dist/**"
    ],
    "devDependencies": {
        "@types/node": "^13.13.52",
        "@types/tape": "^4.13.2",
        "nodemon": "^2.0.4",
        "tape": "^5.3.1",
        "ts-node": "^8.10.1",
        "typescript": "^3.8.3"
    }
}
